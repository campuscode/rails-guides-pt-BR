<% content_for :page_title, "Guia Ruby on Rails" %>
<% content_for :description, "Guia Ruby on Rails" %>

<% content_for :header_section do %>
<%= render 'welcome' %>
<% end %>

<% content_for :index_section do %>
<div id="subCol">
  <dl>
    <dt></dt>
    <% unless @edge -%>
      <dd class="kindle">O Guia Rails também está disponível para <%= link_to 'Kindle', @mobi %>.</dd>
    <% end -%>
    <dd class="work-in-progress">Os guias marcados com este ícone estão sendo em processo de tradução no momento e não estarão disponíveis no menu. Embora ainda sejam úteis, podem conter informações incompletas e até erros. Você pode ajudar revendo-os e publicando comentários e correções.</dd>
  </dl>
</div>
<% end %>

<% documents_by_section.each do |section| %>
  <h3><%= section['name'] %></h3>
  <dl>
    <% section['documents'].each do |document| %>
      <%= guide(document['name'], document['url'], work_in_progress: document['work_in_progress']) do %>
        <%= Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(document['description']).html_safe %>
      <% end %>
    <% end %>
  </dl>
<% end %>
